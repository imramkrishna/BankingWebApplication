}

.answer {
  height:0;
  overflow: hidden;
  transition: height 0.5s ease;
}

.answer p {
  padding: 25px;
  margin: 0px;
  text-align: left;
}

.active + .answer {
  display: block;
  height: 110px;
}

.accordion :nth-child(4n+1){
  background-color: #cfccc4;
  
}


